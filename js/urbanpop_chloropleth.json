{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 300,
  "height": 200,
  "title": {"text":"Urban population (as % total population)","fontWeight":400, "fontSize":14},
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/andrew-cao/Assignment2/main/js/world.topo.json",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/andrew-cao/Assignment2/main/data/dataset.csv"
        },
        "key": "Country",
        "fields": ["urban_pop", "life_expectancy"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "condition": {"test": "datum.urban_pop == 0", "value": "grey"},
      "field": "urban_pop",
      "title": "Urban population",
      "legend": {"titleFontWeight":400},
      "type": "quantitative",
      "scale": {"type": "linear", "scheme": "purpleblue"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {
        "field": "life_expectancy",
        "title": "Life expectancy",
        "type": "quantitative",
	"format": ".2f"
      },
      {
        "field": "urban_pop",
        "title": "Urban population",
        "type": "quantitative",
	"format": ".2f"
      }
    ]
  },
  "config": {}
}