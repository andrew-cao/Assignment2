{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 300,
  "height": 200,
  "title": {"text":"Human Development Index","fontWeight":400, "fontSize":14},
  "data": {
    "url": "https://raw.githubusercontent.com/andrew-cao/Assignment2/main/data/dataset.csv"
  },
  "params": [
    {
      "name": "region_select",
      "bind": {
        "name": "Region: ",
        "input": "select",
        "options": [
          null,
          "East Asia & Pacific",
          "Europe & Central Asia",
          "Latin America & Caribbean",
          "Middle East & North Africa",
          "North America",
          "South Asia",
          "Sub-Saharan Africa"
        ],
        "labels": [
          "Show All",
          "East Asia & Pacific",
          "Europe & Central Asia",
          "Latin America & Caribbean",
          "Middle East & North Africa",
          "North America",
          "South Asia",
          "Sub-Saharan Africa"
        ]
      }
    }
  ],
  "transform": [
    {"filter": "datum.hdi > 0 & datum.life_expectancy > 0"},
    {"filter": "region_select == null || datum.region == region_select"}
  ],
  "layer": [
    {
      "mark": {"type": "circle", "color": "green"},
      "encoding": {
        "x": {
          "field": "hdi",
          "title": "Human Development Index",
          "type": "quantitative",
          "scale": {"type": "linear"},
          "axis": {"grid": false, "tickCount": 4, "titleFontWeight":400}
        },
        "y": {
          "field": "life_expectancy",
          "title": "Life expectancy",
          "type": "quantitative",
          "axis": {"grid": false, "titleFontWeight":400}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "life_expectancy",
            "title": "Life expectancy",
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": "hdi",
            "title": "HDI",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "dx": 40,
        "dy": 75,
        "align": "left",
        "baseline": "middle",
        "fontSize": 12,
        "fontWeight": 600
      },
      "encoding": {
        "text": {
          "aggregate": "mean",
          "field": "hdi",
          "type": "quantitative",
          "format": ".2f"
        },
        "color": {"value": "black"}
      }
    },
    {
      "transform": [{"sample": 1}],
      "mark": {
        "type": "text",
        "dx": 40,
        "dy": 75,
        "align": "right",
        "fontSize": 12
      },
      "encoding": {
        "text": {
          "aggregate": "min",
          "value": "Average HDI: ",
          "type": "nominal"
        },
        "color": {"value": "black"}
      }
    },
    {
      "mark": {
        "type": "text",
        "dx": 40,
        "dy": 90,
        "align": "left",
        "baseline": "middle",
        "fontSize": 12,
        "fontWeight": 600
      },
      "encoding": {
        "text": {
          "aggregate": "mean",
          "field": "life_expectancy",
          "type": "quantitative",
          "format": ".2f"
        },
        "color": {"value": "black"}
      }
    },
    {
      "transform": [{"sample": 1}],
      "mark": {
        "type": "text",
        "dx": 40,
        "dy": 90,
        "align": "right",
        "fontSize": 12
      },
      "encoding": {
        "text": {"value": "Average life expectancy: ", "type": "nominal"},
        "color": {"value": "black"}
      }
    }
  ],
  "config": {}
}