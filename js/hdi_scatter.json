{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 510,
  "height": 340,
  "title": {"text":"Human Development Index","fontWeight":400, "fontSize":14},
  "data": {
    "url": "https://raw.githubusercontent.com/andrew-cao/Assignment2/main/data/dataset.csv"
  },
  "params": [
    {
      "name": "region_select",
      "bind": {
        "name": "Region: ",
        "input": "select",
        "options": [
          null,
          "East Asia & Pacific",
          "Europe & Central Asia",
          "Latin America & Caribbean",
          "Middle East & North Africa",
          "North America",
          "South Asia",
          "Sub-Saharan Africa"
        ],
        "labels": [
          "Show All",
          "East Asia & Pacific",
          "Europe & Central Asia",
          "Latin America & Caribbean",
          "Middle East & North Africa",
          "North America",
          "South Asia",
          "Sub-Saharan Africa"
        ]
      }
    }
  ],
  "transform": [
    {"filter": "datum.hdi > 0 & datum.life_expectancy > 0"},
    {"filter": "region_select == null || datum.region == region_select"}
  ],
  "encoding": {
    "x": {
      "field": "hdi",
      "title": "Human Development Index",
      "type": "quantitative",
      "scale": {"type": "linear"},
      "axis": {"grid": false, "tickCount": 4, "titleFontWeight":400, "titleFontSize": 14}
    },
    "y": {
      "field": "life_expectancy",
      "title": "Life expectancy",
      "type": "quantitative",
      "axis": {"grid": false, "titleFontWeight":400, "titleFontSize": 14}
    }
  },
  "layer": [
    {
      "mark": {"type": "circle", "color": "green", "size":50},
      "encoding": {
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "life_expectancy",
            "title": "Life expectancy",
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": "hdi",
            "title": "HDI",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "fontSize": 12,
        "dy": -14,
        "dx":-6
      },
      "encoding": {
        "text": {
          "field": "Country", "type":"nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.Country == 'Vietnam' || datum.Country == 'Central African Rep.' || datum.Country == 'Niger' || datum.Country == 'Uruguay' || datum.Country == '' || datum.Country == 'Australia'|| datum.Country == 'Syria'", "value": 1
          }, "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "life_expectancy",
            "title": "Life expectancy",
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": "hdi",
            "title": "HDI",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {}
}