{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 510,
  "height": 340,
  "title": {"text":"CO2 emissions (metric tons per capita)","fontWeight":400, "fontSize":14},
  "data": {
    "url": "https://raw.githubusercontent.com/andrew-cao/Assignment2/main/data/dataset.csv"
  },
  "params": [
    {
      "name": "region_select",
      "bind": {
        "name": "Region: ",
        "input": "select",
        "options": [
          null,
          "East Asia & Pacific",
          "Europe & Central Asia",
          "Latin America & Caribbean",
          "Middle East & North Africa",
          "North America",
          "South Asia",
          "Sub-Saharan Africa"
        ],
        "labels": [
          "Show All",
          "East Asia & Pacific",
          "Europe & Central Asia",
          "Latin America & Caribbean",
          "Middle East & North Africa",
          "North America",
          "South Asia",
          "Sub-Saharan Africa"
        ]
      }
    }
  ],
  "transform": [
    {"filter": "datum.co2_emissions > 0 & datum.life_expectancy > 0"},
    {"filter": "region_select == null || datum.region == region_select"}
  ],
  "encoding": {
    "x": {
      "field": "co2_emissions",
      "title": "CO2 Emissions (metric tons per capita, log scale)",
      "type": "quantitative",
      "scale": {"type": "log"},
      "axis": {"grid": false, "tickCount": 4,"titleFontWeight":400, "titleFontSize": 14}
    },
    "y": {
      "field": "life_expectancy",
      "title": "Life expectancy",
      "type": "quantitative",
      "axis": {"grid": false, "titleFontWeight":400, "titleFontSize": 14}
        }},
  "layer": [
    {
      "mark": {"type": "circle", "color": "#78c679", "size":50},
      "encoding": {
        
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "life_expectancy",
            "title": "Life expectancy",
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": "co2_emissions",
            "title": "CO2 Emissions",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
  {
      "mark": {
        "type": "text",
        "align": "center",
        "fontSize": 12,
        "dy": -12
      },
      "encoding": {
        "text": {
          "field": "Country", "type":"nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.Country == 'Lesotho' || datum.Country == 'Sri Lanka' || datum.Country == 'Eq. Guinea' || datum.Country == 'Qatar' || datum.Country == '' || datum.Country == 'Australia'|| datum.Country == 'United Kingdom' || datum.Country == 'Nepal'|| datum.Country == 'Dem. Rep. Congo'", "value": 1
          }, "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "life_expectancy",
            "title": "Life expectancy",
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": "co2_emissions",
            "title": "CO2 emissions",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {}
}